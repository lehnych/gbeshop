extends layout/base

block variables
	- var pageMetaTitle = 'Catalog'
	- var pageTitle = 'New Arrivals'
	- var catalogType = 'Women'
	- var sectionBreadcrumb = true

block maincontent
	section.categorie-options.row
		.filter-primary
			.filter-primary__item
				.filter-primary__item__wrapper
					.filter-primary__item__header
						span
							|Filter
						span
							i.icon__filter

					.filter-primary__item__content
