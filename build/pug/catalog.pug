									a(href='#' title='Brand 2') Brand 2
								li
									a(href='#' title='Brand 3') Brand 3
								li
									a(href='#' title='Brand 4') Brand 4
						details
							summary
								|Designer
							ul
								li
									a(href='#' title='Designer 1') Designer 1
								li
									a(href='#' title='Designer 2') Designer 2
								li
									a(href='#' title='Designer 3') Designer 3
								li
									a(href='#' title='Designer 4') Designer 4

		.filter-secondary
			.filter-secondary__item.dropdown
				.dropdown__header.dropdown-toggle(data-bs-target='#filter-secondary-trends' data-bs-toggle='dropdown' aria-expanded='false')
					span
						|Trending now
					span
						i.icon__angle-down
				#filter-secondary-trends.dropdown__content.dropdown-menu
					//inputCheckbox(inputCustom, inputLabel, inputId, inputName, inputValue, inputChecked, inputRequired, inputClass)
					+inputCheckbox(true, 'Trend 1', 'trend1', 'trend1', false, false, false, 'custom-element__input')
