				|#[span of luxerios #[span fashion]]
			.intro__img.aos-item(data-aos='fade-right' data-aos-duration='1000' data-aos-easing='ease-in-out')
				img(src='img/intro.png' alt='Intro')

block productslider
	section.poduct-slider.swiper-box(class=sliderPagination ? '' : 'no--pagination')

