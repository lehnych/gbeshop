mixin input(inputCustom, inputType, inputLabel, inputId, inputName, inputPlaceholder, inputValue, inputPattern, inputMin, inputMax, inputMinLength, inputMaxLength, inputAutocomplete, inputAutofocus, inputDisabled, inputReadonly, inputRequired, inputClass)

	.form-group
		if inputCustom
			.form-label-group
				input(
					type=inputType
					id=inputId
					name=inputName
					placeholder=inputPlaceholder
					value=inputValue
					pattern=inputPattern
					min=inputMin
					max=inputMax
					minlength=inputMinLength
					maxlength=inputMaxLength
					autocomplete=inputAutocomplete
					disabled=inputDisabled
					readonly=inputReadonly
					required=inputRequired
					class=inputClass
				)
				label(for=id)= inputLabel
		else
			if inputType == 'search'
				label(for=id)= inputLabel
				.search-field
					input(
						type=inputType
						id=inputId
						name=inputName
						placeholder=inputPlaceholder
						class=inputClass
					)
					+button('', 'submit', 'search-button', true , 'icon__search', 'left')
			else
				label(for=id)= inputLabel
				input(
					type=inputType
					id=inputId
					name=inputName
					placeholder=inputPlaceholder
					value=inputValue
					pattern=inputPattern
					min=inputMin
					max=inputMax
					minlength=inputMinLength
					maxlength=inputMaxLength
					autocomplete=inputAutocomplete
					disabled=inputDisabled
					readonly=inputReadonly
					required=inputRequired
					class=inputClass
				)
